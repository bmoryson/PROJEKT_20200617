  METHOD FIND_LOCATION.

    DATA LS_WSB_LOCATION TYPE ZWSB_LOCATION.

    SELECT * INTO TABLE ME->GT_WSB_LOCATION
      FROM ZWSB_LOCATION WHERE IS_AVAILABLE EQ 'X'.

    SORT ME->GT_WSB_LOCATION BY PLACEID ASCENDING.

    READ TABLE ME->GT_WSB_LOCATION INTO LS_WSB_LOCATION INDEX 1.
    IF SY-SUBRC NE 0.
      RAISE NO_LOCATION.
    ELSE.
      EV_PLACEID = LS_WSB_LOCATION-PLACEID.
    ENDIF.

  ENDMETHOD.
